<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.framgia.ishipper.ui.fragment.NearbyOrderFragment">


    <LinearLayout
        android:id="@+id/layoutListOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/all_padding_medium">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/tvInvoiceCount"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fragment_nearby_invoice_count"/>

        <TextView
            android:id="@+id/btnViewChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_nearby_order_view_in_map"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_button"/>

    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/switcherLayout"
        android:layout_width="match_parent"
        android:inAnimation="@android:anim/slide_in_left"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerListInvoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map_nearby_order"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    map:mapType="normal"
                    map:uiCompass="false"
                    map:uiRotateGestures="true"
                    map:uiScrollGestures="true"
                    map:uiTiltGestures="true"
                    map:uiZoomGestures="true"/>

                <ImageView
                    android:id="@+id/img_nearby_order_pos_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_map_picker_start"/>
            </RelativeLayout>

            <include
                layout="@layout/item_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

            <include layout="@layout/searchview_layout"/>
        </RelativeLayout>
    </ViewSwitcher>
</LinearLayout>
